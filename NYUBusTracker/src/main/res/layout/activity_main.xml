<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">


    <TextView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_button"
        android:onClick="createStartDialog"
        style="@style/StartEndButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/start_end_divider"
        android:layout_below="@id/start_button"
        style="@style/Separator" />

    <TextView
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/end"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:layout_below="@+id/start_end_divider"
        android:layout_alignParentLeft="true"
        android:textStyle="bold" />

    <Button
        android:id="@+id/end_button"
        android:onClick="createEndDialog"
        style="@style/StartEndButton"
        android:layout_below="@+id/start_end_divider"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/under_end_button_divider"
        style="@style/Separator"
        android:layout_below="@id/end_button"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/times_button"
        android:onClick="createTimesDialog"
        style="@style/TimesButton"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/under_end_button_divider"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/next_bus"
        android:layout_below="@+id/under_end_button_divider"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextSwitcher
        android:id="@+id/next_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/next_bus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="4dp"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/next_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/next_time"
        android:layout_alignLeft="@+id/next_time"
        android:layout_alignStart="@+id/next_time"
        android:layout_marginBottom="4dp"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/under_times_button_divider"
        style="@style/Separator"
        android:layout_below="@id/times_button"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/safe_ride_button"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/call_safe_ride"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/under_times_button_divider"
        android:onClick="callSafeRide"
        android:visibility="gone"
        android:gravity="center"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/safe_ride_button"
        android:name="com.google.android.gms.maps.MapFragment"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_action_help"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/next_time"
        android:layout_alignEnd="@+id/next_time"
        android:onClick="createInfoDialog"
        android:alpha=".6"/>

</RelativeLayout>