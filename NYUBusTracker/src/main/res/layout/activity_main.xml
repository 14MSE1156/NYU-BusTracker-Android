<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple">

    <Button
        android:id="@+id/start_button"
        android:onClick="createStartDialog"
        style="@style/StartEndButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/start_end_divider"
        android:layout_below="@id/start_button"
        style="@style/Separator" />

    <Button
        android:id="@+id/end_button"
        android:onClick="createEndDialog"
        style="@style/StartEndButton"
        android:layout_below="@+id/start_end_divider"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/end"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:layout_below="@+id/start_end_divider"
        android:layout_alignParentLeft="true"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/under_end_button_divider"
        style="@style/Separator"
        android:layout_below="@id/end_button"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_action_about"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="createInfoDialog"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/under_end_button_divider">
        <View
            android:id="@+id/empty_space"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@android:color/transparent" />
        <View
            android:id="@+id/more_empty_space"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/empty_space"
            android:visibility="gone"
            android:background="@android:color/transparent" />
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/map"
                  android:layout_width="match_parent"
                  android:layout_height="fill_parent"
                  android:layout_below="@+id/more_empty_space"
                  android:name="com.google.android.gms.maps.MapFragment"/>


    </RelativeLayout>

    <com.palsulich.nyubustracker.helpers.MultipleOrientationSlidingDrawer
        xmlns:custom="http://schemas.android.com/apk/res-auto/com.palsulich.nyubustracker"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/under_end_button_divider"
        android:id="@+id/sliding_drawer"
        custom:handle="@+id/handle_c"
        custom:content="@+id/content_c"
        custom:orientation="top">
        <RelativeLayout
            android:id="@id/handle_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple">
            <TextView
                android:id="@+id/next_bus"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextSwitcher
                android:id="@+id/next_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/next_bus"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="4dp"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/next_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/next_time"
                android:layout_alignLeft="@+id/next_time"
                android:layout_alignStart="@+id/next_time"
                android:layout_marginBottom="4dp"
                android:textSize="16sp"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/times_button"
                style="@style/TimesButton"
                android:layout_height="90dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:id="@+id/under_times_button_divider"
                style="@style/Separator"
                android:layout_below="@id/times_button"
                android:layout_alignParentLeft="true"
                android:visibility="gone"/>
            <Button
                android:id="@+id/safe_ride_button"
                style="?android:attr/borderlessButtonStyle"
                android:text="@string/call_safe_ride"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@id/under_times_button_divider"
                android:onClick="callSafeRide"
                android:visibility="gone"
                android:gravity="center"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@id/content_c"
            android:background="#555555">

            <se.emilsjolander.stickylistheaders.StickyListHeadersListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/times_list">

                </se.emilsjolander.stickylistheaders.StickyListHeadersListView>
        </FrameLayout>
    </com.palsulich.nyubustracker.helpers.MultipleOrientationSlidingDrawer>

</RelativeLayout>